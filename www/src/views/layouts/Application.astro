---
import "@libs/globals.css";

import Container from "@includes/static/Container/Container.astro";
import Meta from "@includes/static/Meta/Meta.astro";
import NavBar from "@includes/dynamic/NavBar";
import Footer from "@includes/static/Footer/Footer.astro";
import AstroGap from "astro-gap"
export type MetaProps = {
  title?: string;
  pageTitle?: string;
};
export interface LayoutProps {
  meta?: MetaProps;
  header?: any;
  footer?: any;
}

export interface IApplication extends LayoutProps {
  version?: string;
}

const { meta } = Astro.props;
---

<!DOCTYPE html>
<html>
  <Meta />
  <Container>
    <NavBar />
    <AstroGap spaces={8}/>
    <slot />
    <Footer />
  </Container>
</html>
